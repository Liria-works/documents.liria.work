---
import { Image } from 'astro:assets';
import { getArticles } from '@/lib/graphics';
import Main from '@/layouts/main.astro';
import Article from '@/layouts/article.astro';
import Logo from '../../assets/logo_liria_graphics.png';

const articles = await getArticles();
---

<Main
    title="Liria Graphics"
    description="Liria Graphicsは、VRSNSアバター向けアセットを中心に販売するBOOTHショップです"
    image="/og/graphics.png"
    authors={['Liria', 'Liry24']}
>
    <Article>
        <div gap-8 flex="~ col">
            <a
                tabindex="0"
                href="https://eicosapenta.booth.pm"
                target="_blank"
                gap-4
                flex="~ col"
                class="group focus-visible:outline-none [&_*]:transition-all [&_*]:duration-200 [&_*]:delay-0 [&_*]:ease-in-out"
            >
                <div max-w-sm md:max-w-lg p="r-12 t-6 md:t-0" select-none>
                    <Image
                        src={Logo}
                        alt="Liria Graphics"
                        format="webp"
                        loading="eager"
                    />
                </div>

                <div flex gap-3 items-center>
                    <span
                        class="i-custom-booth?mask size-5"
                        bg="neutral-4 group-hover:[#fc4d50] group-focus-visible:[#fc4d50]"
                    ></span>
                    <span
                        text="neutral-4 group-hover:red-4 group-focus-visible:red-4"
                    >
                        booth.pm
                    </span>
                    <span
                        i-lucide-arrow-up-right
                        size-4
                        bg="red-4"
                        opacity-0
                        transform="translate-x-[-1rem]"
                        group-hover="opacity-100 transform-translate-x-0"
                        group-focus-visible="opacity-100 transform-translate-x-0"
                    ></span>
                </div>
            </a>

            <div gap-3 flex="~ col" text-neutral-2>
                <p>
                    {
                        'Liria Graphicsは、VRSNSアバター向けアセットを中心に販売するBOOTHショップです。'
                    }
                </p>
                <p>
                    {
                        'このドキュメントでは、各販売アイテムのドキュメントやライセンスについて掲載します。'
                    }
                </p>
            </div>

            <div gap-5 flex="~ col">
                <h2 text-xl font-bold>アイテム一覧</h2>
                <div gap-5 grid="~ cols-2">
                    {
                        articles.contents.map((item) => (
                            <a
                                tabindex="0"
                                href={`/graphics/${item.id}`}
                                relative
                                rounded-lg
                                gap-2
                                p="2 b-3"
                                flex="~ col"
                                items-center
                                class="group border b-neutral-7 hover:b-neutral-4 focus-visible:b-neutral-4 focus-visible:bg-neutral-8 focus-visible:outline-none transition duration-200 ease-in-out [&_*]:transition-all [&_*]:duration-200 [&_*]:ease-in-out"
                            >
                                <span
                                    i-lucide-arrow-up-right
                                    size-6
                                    absolute
                                    top-2
                                    right-2
                                    bg-neutral-3
                                    opacity-0
                                    transform="translate-x-[-1rem]"
                                    group-hover="opacity-100 transform-translate-x-0"
                                    group-focus-visible="opacity-100 transform-translate-x-0"
                                />
                                <Image
                                    src={item.thumbnail.url}
                                    alt={item.title.ja}
                                    width="192"
                                    height="192"
                                    format="webp"
                                    loading="lazy"
                                    object-cover
                                />
                                <h3
                                    font-semibold
                                    text="neutral-3 group-hover:neutral-1 group-focus-visible:neutral-1"
                                >
                                    {item.title.ja}
                                </h3>
                            </a>
                        ))
                    }
                </div>
            </div>
        </div>
    </Article>
</Main>
